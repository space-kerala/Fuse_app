<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bolt.expression">

    <uses-feature android:name="android.hardware.Camera" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fuse_logo"
        android:label="Fuse"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name="com.example.bolt.expressionFuse.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bolt.expressionFuse.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.bolt.expressionFuse.Camera"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bolt.expressionFuse.cameraTut" />
        <activity android:name="com.example.bolt.expressionFuse.nameGame" />
        <activity android:name="com.example.bolt.expressionFuse.game1" />
        <activity android:name="com.example.bolt.expressionFuse.FuseGame" />
        <activity android:name="com.example.bolt.expressionFuse.Game4" />
        <activity android:name="com.example.bolt.expressionFuse.Game2" />
        <activity android:name="com.example.bolt.expressionFuse.Game1" />
        <activity android:name="com.example.bolt.expressionFuse.Game3" />
        <activity android:name="com.example.bolt.expressionFuse.LastActivity"></activity>
    </application>

</manifest>