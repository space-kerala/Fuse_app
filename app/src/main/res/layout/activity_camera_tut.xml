<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/GreenYellow"
    tools:context="com.example.bolt.expressionFuse.cameraTut">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:id="@+id/RLay">

            <ImageButton
                android:id="@+id/flashBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/Black"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/flashon"
                android:scaleType="centerInside"/>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/Black"
        android:layout_height="100dp"
        android:id="@+id/lay"
        android:orientation="horizontal"/>


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:text="Let's become a photographer"
            android:textSize="35sp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/RLay"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:textSize="25sp"
            android:id="@+id/tv2"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Click on each Button once you know their use"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:textSize="25dp"
            android:id="@+id/captureBtn2"
            android:background="@color/DodgerBlue"
            android:layout_marginTop="60dp"
            android:layout_below="@id/tv2"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/captureBtn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/captureBtn2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ccp"
            android:scaleType="centerInside"
            android:background="@null"/>
        <ImageButton
         android:id="@+id/iBcapture"
         android:layout_width="100dp"
         android:background="@color/Black"
         android:layout_height="100dp"
         android:scaleType="centerInside"
          app:srcCompat="@drawable/capture"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
            android:onClick="buttonClick"/>

        <ImageButton
         android:id="@+id/iBchange"
         android:onClick="buttonClick1"
         android:layout_width="80dp"
         android:layout_height="80dp"
          app:srcCompat="@drawable/settings"
         android:layout_marginEnd="16dp"
            android:scaleType="centerInside"
            android:background="@color/Black"
             android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/iBcapture" />

     <ImageButton
         android:onClick="buttonClick2"
            android:id="@+id/iBsettings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/change"
        android:layout_marginLeft="16dp"
         android:scaleType="centerInside"
         android:background="@color/Black"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iBcapture" />




</RelativeLayout>
