<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bolt.expressionFuse.Camera">


    <ImageButton
        android:layout_marginTop="6dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/tutButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="TutClick"
        android:background="@drawable/tut"
        android:contentDescription=""
        tools:ignore="ContentDescription"/>

    <ImageButton
        android:layout_below="@+id/tutButton"
        android:id="@+id/captureBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/snapb"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        android:onClick=""
        tools:ignore="ContentDescription,ObsoleteLayoutParam"
        android:contentDescription=""/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/gal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:contentDescription=""
        tools:ignore="ContentDescription"/>



</LinearLayout>
